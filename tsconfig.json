{
	"compilerOptions": {
		"resolveJsonModule": true,
		"target": "es5",
		"module": "commonjs",
		"lib": ["es2015"],
		"outDir": "./dist",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["./src", "./tests"]
}
